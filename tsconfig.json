{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                    
    "lib": ["es5", "es6", "dom"],                 
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "typeRoots": ["./@types"]
  }
}